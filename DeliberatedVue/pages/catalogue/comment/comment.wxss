/* pages/catalogue/comment/comment.wxss */
.code{
  border: 5rpx solid #41b883;
  border-radius: 20rpx; /*圆角*/
  padding: 10rpx;
  width: 600rpx;
  max-height: 375rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-bottom: 40rpx;
}
.comment{
  display: flex; /*设置为可并排*/
  align-items: flex-start;
}
.userImg{
  width: 60rpx;
  height: 60rpx;
  margin-left: 15rpx;
  margin-top: 6rpx;
  border-radius: 80rpx;
}
.commentin{
  border: 5rpx solid rgb(226, 226, 226);
  border-radius: 10rpx; /*圆角*/
  padding: 10rpx;
  width: 430rpx;
  height: 50rpx;
  margin-left: 25rpx;
}
.confirm{
  background-color: #41b883;
  height: 70rpx;
  margin-top: 2rpx;
  font-style: white;
}
.confirm_text{
  color: white;
}
.usercomment{
  display:flex;
  align-items: flex-start;
  margin-top: 15rpx;
}
.rightbox{
  width: 600rpx;
  margin-left: 20rpx;
  margin-top: 17rpx;
}
.username{
  font-size: 35rpx;
}
.comment_text{
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
}
.ellipsis{
  -webkit-line-clamp:3; /*最多显示3行*/
  opacity: 0.75 /*透明度75%*/
}
.unellipsis{
  -webkit-line-clamp:0; /*全部显示*/
  opacity: 1 /*不透明*/
}
.show{
  color: #0d89c2;
}
